<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/blueButtonDark" />
            <gradient android:angle="-90" android:startColor="@color/blueButtonDark" android:endColor="@color/blueButtonDark" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#00FFFFFF" />
            <gradient android:angle="-90" android:startColor="#00FFFFFF" android:endColor="#00FFFFFF" />
        </shape>
    </item>
</selector>