<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.triolabs.pp.ui.MainActivity"
    android:weightSum="1">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:background="@drawable/tab_background"
        android:elevation="5dp"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <ToggleButton
            android:background="@drawable/selector_mediciones"
            android:padding="5dip"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:textOff=""
            android:textOn=""
            android:id="@+id/main_tb_status" />

        <ToggleButton
            android:background="@drawable/selector_test"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textOff=""
            android:textOn=""
            android:id="@+id/main_tb_test"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:background="@drawable/selector_usuario"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:textOff=""
            android:textOn=""
            android:id="@+id/main_tb_profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fl_container">

    </FrameLayout>

</LinearLayout>
